<% model_class = User %>
<div class="page-header">
  <h1> <%=t 'user.forget_password'%> </h1>
</div>

<%= form_for(resource, as: resource_name, 
                      url: password_path(resource_name), 
                      html: { method: :post, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label t('user.email'), class: 'control-label', for: 'user_email' %>
    <div class="controls">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('user.send_me_email'), :class => 'btn btn-primary' %>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t('user.sign_up'), new_registration_path(resource_name), class: 'btn' %>
    <% end -%>
    <%- if controller_name != 'sessions' %>
      <%= link_to t('user.login'), new_session_path(resource_name), class: 'btn' %>
    <% end -%>
  </div>
<% end %>

