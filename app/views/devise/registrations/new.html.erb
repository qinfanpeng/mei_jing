<% model_class = Column %>
<div class="page-header">
  <h1> <%=t 'user.sign_up'%> </h1>
</div>

<%= form_for(resource, as: resource_name, 
                      url: registration_path(resource_name), 
                      html: { :class => "form-horizontal" }) do |f| %>
  <div class="control-group">
    <%= f.label t('user.email'), class: 'control-label', for: 'user_email' %>
    <div class="controls">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label t('user.password'), class: 'control-label', for: 'user_password' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label t('user.password_confirmation'), class: 'control-label', for: 'user_password_confirmation' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('user.sign_up'), :class => 'btn btn-primary' %>
    <%- if controller_name != 'sessions' %>
      <%= link_to t('user.login'), new_session_path(resource_name), class: 'btn' %>
    <% end -%>
  </div>

<% end %>
